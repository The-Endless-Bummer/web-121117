<div class="row">
  <div class="col-5" style="margin-top: 25px">
    <%= form_for @song do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Song", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
